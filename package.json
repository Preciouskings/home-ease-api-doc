{
  "name": "openapi-boilerplate",
  "version": "0.1.1",
  "description": "Multi-file boilerplate for Open API Specification.",
  "main": "index.js",
  "scripts": {
    "build": "swagger-cli bundle src/openapi.yaml --outfile _build/openapi.yaml --type yaml",
    "build:html": "pnpm build && redoc-cli bundle _build/openapi.yaml  --output _build/index.html --options.onlyRequiredInSamples",
    "preview": "pnpm build && redoc-cli serve _build/openapi.yaml --options.onlyRequiredInSamples",
    "deploy": "bash ./ci/deploy.sh",
    "clean": "rm _build",
    "test": "pnpm build && spectral lint _build/openapi.yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgarcia360/openapi-boilerplate.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgarcia360/openapi-boilerplate/issues"
  },
  "homepage": "https://github.com/dgarcia360/openapi-boilerplate#readme",
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@stoplight/spectral": "^6.5.0",
    "redoc-cli": "^0.13.20"
  }
}
